<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="lotusbidashboard.LoginController">
   <children>
      <BorderPane layoutX="125.0" layoutY="100.0">
         <bottom>
            <GridPane prefHeight="200.0" prefWidth="350.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0" prefWidth="119.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="302.0" minWidth="10.0" prefWidth="231.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onLogInButtonClick" text="Log In" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Label text="Username" />
                  <Label text="Password" GridPane.rowIndex="1" />
                  <TextField fx:id="usernameTextField" GridPane.columnIndex="1" />
                  <PasswordField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ProgressIndicator fx:id="progressIndicator" visible="false" GridPane.rowIndex="2" />
                  <Label fx:id="errorLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
